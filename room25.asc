function hBild_AnyClick()
{
	if (any_click_move(165, 119, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Das hab ich in der Nacht geschossen, in der ich Ding kennengelernt habe.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das gefällt Ding so gut, dass ich es da hängen lasse.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Und mit was?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Hinter dem Bild steht nur das Datum.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Da gibt es nichts zu schließen.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das bleibt genau da, wo es ist.");
		}
		else Unhandled();
	}
}

function hLampe_AnyClick()
{
	if (any_click_walk(mouse.x, mouse.y + 70, eDirUp))
	{
	}
	else
