/****************************
*   Hotspot-Funktionen
****************************/
function hMauseloch_AnyClick()
{
	if (any_click_walk(465, 135, eDirRight))
	{
	}
	else
	{
		player.FaceLocation(476, 136);

		if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Hier rennen Ratten rein - aber nicht raus!");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das möchte ich sehen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich habe nichts um es zu verstopfen. Außerdem nagen die Ratten das wieder weg.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Damit noch größere Ratten durch unser Hasu laufen?");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Ich habe nichts, das passend wäre.");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			player.Say("Reporter der Schülerzeitung verschiebt Mauseloch.");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Reporter der Schülerzeitung verschiebt Mauseloch.");
		}
		else if (UsedAction(eActUseInventory) && player.ActiveInventory == iDing)
		{
			Wait(5);
			player.Say("Nein, einmal hat gereicht!");
		}
		else Unhandled();
	}
}

function hChuck_AnyClick()
{
	if (any_click_walk(243, 130, eDirUp))
	{
	}
	else
	{
		player.FaceLocation(243, 119);

		if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Dr. Fred hat uns damals allen einen Sprössling als Entschädigung geschenkt.");
			Wait(20);
			player.Say("Wir hätten das Geld nehmen sollen ...");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Dann beißt er mich.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Der wurde erst gestern gegossen.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Chuck aus der Erde reißen? Niemals.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Ich will nicht abdecken.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Chuck gefällt es da.");
		}
		else Unhandled();
	}
}


