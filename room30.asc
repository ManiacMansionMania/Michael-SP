}

function hTuerSchwester_AnyClick()
{
	if ( any_click_on_door (29, oTuerSchwester, 42, 134, eDirLeft, 31, 231, 116, eDirDown) == 0 ) Unhandled ();
}

function hTuerBruder_AnyClick()
{
	if (UsedAction(eActLookAt))
	{
		player.FaceLocation(169, 122);
		player.Say("Das Zimmer meines großen Bruders.");
		if(GetGlobalInt(30) == 0)
		{
			player.Say("Er scheint Französisch zu mögen.");
		}
	}
	else
	if (any_click_on_door (30, oTuerBruder, 166, 129, eDirUp, 32, 34, 138, eDirRight) == 0) Unhandled ();
}

function hTuerDunkelkammer_AnyClick()
{
