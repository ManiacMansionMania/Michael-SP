function hKorb_AnyClick()
{
	if (any_click_walk(198, 135, eDirectionUp))
	{
	}
	else
	{
		player.FaceLocation(198, 125);

		if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Früher hatte ich mal Fische ...");
			if ( cDing.Room == 35 )
			{
				player.FaceCharacter(cDing);
				Wait(20);
				cDing.Animate(0, 3, 0);
				Wait(5);
				PlaySound(30);
				Wait(20);
				cDing.UnlockView();
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Dann hat Ding kein Bett mehr.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Das ist Ding sein Schlafplatz.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der ist sauber genug. Der muss nicht ausgeschüttelt werden.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Ding deckt sich nicht zu und braucht daher keine Decke.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ding gefällt es da, wo er ist.");
		}
		else Unhandled();
	}
}

