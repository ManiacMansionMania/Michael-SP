function hBuecher_AnyClick()
{
	if (any_click_move(164, 140, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Bücher von Welten hinter Schränken.");
			Wait(20);
			player.FaceDirection(eDirDown);
			player.Say("Dafür wird man nie zu alt.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Meine Schwester will die sicher noch lesen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Das ist momentan nicht wichtig.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Uiii, meine Schwester ließt aber Sachen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die Bücher sind alle ordentlich geschlossen.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das hätte meine Schwester was dagegen.");
		}
		else Unhandled();
	}
}

