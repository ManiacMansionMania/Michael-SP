function hFenster_AnyClick()
{
	if (any_click_walk(123, 129, eDirUp))
	{
	}
	else
	{
		player.FaceLocation(140, 90);

		if (UsedAction(eActLookAt))
		{
			Wait(5);
			any_click_move(140, 90, eDirUp);
			player.Say("Ich kann Daves Haus sehen.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das ist nicht dein ernst!");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich komme nicht ran um es zu öffnen.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Ich komme nicht ran um es zu öffnen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Das Fenster ist doch schon zu.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das bringt nichts.");
		}
		else Unhandled();
	}
}

