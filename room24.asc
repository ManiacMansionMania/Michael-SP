/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	oTuer.init_object(24);
	cMum.FaceDirection(eDirUp);
	cOma.FaceDirection(eDirDown);
	cOma.LockView(127);
	cOma.Animate(0, 10, eRepeat, eNoBlock);
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuer_AnyClick()
{
	if ( any_click_on_door (24, oTuer, 278, 135, eDirRight, 22, 157, 128, eDirDown) == 0 ) Unhandled ();
}

function hTuerGarten_AnyClick()
{
	// Es gibt noch keinen Garten
	if (any_click_walk(92, 125, eDirUp))
	{
		if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Sie ist abgeschlossen.");
		}
	}
	else
	{
		player.FaceLocation(94, 110);

		if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Diese Tür führt zu unserem Garten.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Die lässt sich nur schwer nehmen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Und wie bitte?");
		}

		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die Tür ist bereits zu.");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			player.Say("Die Tür ist bereits zu.");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ich will nicht in den Garten.");
		}
		else Unhandled();
	}
}


