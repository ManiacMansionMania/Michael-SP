function hBild01_AnyClick()
{
	if (any_click_move(346, 130, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Ein Bild vom Haus der Morrisons.");
			Wait(25);
			player.FaceDirection(eDirectionRight);
			Wait(10);
			player.FaceDirection(eDirectionDown);
			Wait(10);
			player.Say("Wer das hier wohl aufgehängt hat?");
			Wait(25);
			player.FaceDirection(eDirectionRight);
			Wait(25);
			player.Say("Ich habe da einen Verdacht ...");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Es scheint festgeklebt zu sein.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich könnte es mit Farbe überpinseln.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der Bilderrahmen lässt sich nur von hinten öffnen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Der Bilderrahmen ist bereits zu.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das Bild hängt gerade.");
		}
		else Unhandled();
	}
}

